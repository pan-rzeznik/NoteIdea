<UserControl x:Class="NoteIdea.SerachBarControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NoteIdea"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="300">
    <Border Style="{DynamicResource SearchBarBorder}" CornerRadius="5">
        <TextBox Style="{DynamicResource SearchBarText}" Background="Transparent" Grid.Row="0" Text="Search a note..." ></TextBox>
    </Border>
</UserControl>
