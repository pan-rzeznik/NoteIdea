<UserControl x:Class="NoteIdea.EmptyListControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NoteIdea"
             mc:Ignorable="d" 
             >

    <StackPanel Margin="0 410 0 0">
            <StackPanel.Effect>
                <DropShadowEffect Color="#FFB0B0B0" Direction="360" ShadowDepth="1" RenderingBias="Quality" BlurRadius="10" Opacity="0.8"/>
            </StackPanel.Effect>

        <Border Width="200" Height="70" CornerRadius="10" Background="White" >
                <TextBlock FontFamily="{DynamicResource LatoLight}" Foreground="{DynamicResource BasicDarkTextColorBrush}" FontSize="19" Text="Your list is empty." HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center"/>
            </Border>
        </StackPanel>
    
</UserControl>
