<UserControl x:Class="NoteIdea.TextEditorDisableControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NoteIdea"
             mc:Ignorable="d" 
             d:DesignHeight="850" d:DesignWidth="800">
    <StackPanel Margin="0 180 0 0">
        
        <Border Width="300" Height="70" >
            <StackPanel>
                <TextBlock FontFamily="{DynamicResource LatoLight}" Foreground="{DynamicResource BasicDarkTextColorBrush}" FontSize="25" Text="Welcome in NoteIdea!" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center"/>
                <TextBlock Margin="0 5 0 0" FontFamily="{DynamicResource LatoMedium}" Foreground="{DynamicResource BasicDarkTextColorBrush}" FontSize="15" Text="Your personal notepad" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center"/>
            </StackPanel>
        </Border>
    </StackPanel>
</UserControl>
